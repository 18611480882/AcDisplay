<resources>

    <style name="TextAppearance.Dialog.Title" parent="android:TextAppearance.Holo.Large">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Dialog.Message" parent="android:TextAppearance.Holo.Small">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Dialog.Info" parent="android:TextAppearance.Holo.Small">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!--
         HeadsUp
      -->

    <style name="HeadsUp_Notification_Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/heads_up_primary_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="HeadsUp_Notification_Subtext">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/heads_up_third_text_color</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="HeadsUp_Notification_Message">
        <item name="android:textColor">@color/heads_up_secondary_text_color</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
