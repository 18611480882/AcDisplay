<resources>

    <style name="Base.MaterialTheme" parent="Theme.AppCompat" >
        <item name="android:windowContentOverlay">@drawable/bg_window_overlay_dark</item>
        <item name="android:listSeparatorTextViewStyle">@style/MaterialListSeparator</item>
    </style>

    <style name="MaterialTheme" parent="Base.MaterialTheme">
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorSecondary">@color/secondary_color</item>
        
        <!-- Dialog -->
        <item name="dialogTitleStyle">@style/MaterialDialog.Title</item>
        <item name="dialogMessageStyle">@style/MaterialDialog.Message</item>

        <!-- Main styles -->
        <item name="acDisplayTitle">@style/MaterialAcDisplay.Title</item>
        <item name="acDisplaySubtitle">@style/MaterialAcDisplay.Subtitle</item>
        <item name="acDisplayMessage">@style/MaterialAcDisplay.Message</item>
        <item name="acDisplayAction">@style/MaterialAcDisplay.Action</item>
        <item name="acDisplayLargeClock">@style/MaterialAcDisplay.LargeClock</item>
        <item name="acDisplaySmallClock">@style/MaterialAcDisplay.SmallClock</item>
    </style>

    <style name="Base.MaterialTheme.Fullscreen" parent="MaterialTheme" />

    <style name="MaterialTheme.Fullscreen" parent="Base.MaterialTheme.Fullscreen">
        <!-- Theme.Holo.NoActionBar.Fullscreen -->
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--
        Stock theme
        -->

    <style name="Base.StockTheme" parent="@android:style/Theme.Holo" >
        <item name="android:windowContentOverlay">@drawable/bg_window_overlay_dark</item>
        <item name="android:listSeparatorTextViewStyle">@style/MaterialListSeparator</item>
    </style>

    <style name="StockTheme" parent="Base.StockTheme">
        <item name="acDisplayTitle">@style/MaterialAcDisplay.Title</item>
        <item name="acDisplaySubtitle">@style/MaterialAcDisplay.Subtitle</item>
        <item name="acDisplayMessage">@style/MaterialAcDisplay.Message</item>
        <item name="acDisplayAction">@style/MaterialAcDisplay.Action</item>
        <item name="acDisplayLargeClock">@style/MaterialAcDisplay.LargeClock</item>
        <item name="acDisplaySmallClock">@style/MaterialAcDisplay.SmallClock</item>
    </style>

    <style name="Base.StockTheme.Fullscreen" parent="StockTheme" />

    <style name="StockTheme.Fullscreen" parent="Base.StockTheme.Fullscreen">
        <!-- Theme.Holo.NoActionBar.Fullscreen -->
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--
        AcDisplay
        -->

    <style name="Base.StockTheme.AcDisplay" parent="StockTheme.Fullscreen" />

    <style name="StockTheme.AcDisplay" parent="Base.StockTheme.AcDisplay">
        <item name="android:inAnimation">@null</item>
        <item name="android:outAnimation">@null</item>

        <item name="android:windowBackground">@color/keyguard_background</item>
        <item name="android:colorBackground">@color/keyguard_background</item>
    </style>

    <style name="StockTheme.AcDisplay.Wallpaper" parent="StockTheme.AcDisplay">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/keyguard_background_semi</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <!--
        Dashboard
        -->

    <style name="MaterialTheme.Dashboard" parent="MaterialTheme">
        <item name="android:windowBackground">?colorSecondary</item>
        <item name="dashboardCategoryTitle">@style/MaterialDashboard.Category_title</item>
        <item name="dashboardCategoryBackground">@drawable/bg_dashboard_category_dark</item>
    </style>

    <!--
        Snake
        -->

    <style name="MaterialTheme.Snake" parent="MaterialTheme.Fullscreen">
    </style>

</resources>