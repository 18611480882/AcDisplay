<resources>

    <declare-styleable name="HoloCircularProgressBar">
        <attr name="stroke_width" format="dimension" />
        <attr name="progress" format="float"/>
        <attr name="marker_progress" format="float"/>
        <attr name="progress_color" format="color"/>
        <attr name="progress_background_color" format="color"/>
        <attr name="thumb_visible" format="boolean"/>
        <attr name="marker_visible" format="boolean"/>
        <attr name="android:gravity"/>
    </declare-styleable>

    <declare-styleable name="WaveView">
        <attr name="point_radius" format="dimension" />
        <attr name="point_number" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="Theme">
        <attr name="circularProgressBarStyle" format="reference"/>
        <attr name="waveViewStyle" format="reference"/>

        <!-- Dialog styles -->
        <attr name="dialogStyle" format="reference"/>
        <attr name="dialogTitleStyle" format="reference"/>
        <attr name="dialogContentStyle" format="reference"/>
        <attr name="textAppearanceDialogTitle" format="reference"/>
        <attr name="textAppearanceDialogMessage" format="reference"/>
        <attr name="textAppearanceDialogInfo" format="reference"/>

        <!-- Active display -->
        <attr name="activeDisplayNotificationTitle" format="reference"/>
        <attr name="activeDisplayNotificationMessage" format="reference"/>
    </declare-styleable>
</resources>