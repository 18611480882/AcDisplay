<resources>

    <!-- All device dependent modification goes here -->
    <style name="AppThemeBase" parent="android:Theme.Holo">
        <item name="dialogStyle">@style/Widget.Dialog</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">
        <item name="android:actionBarStyle">@android:style/Widget.Holo.ActionBar.Solid</item>

        <!-- My styles -->
        <item name="circularProgressBarStyle">@style/CircularProgressBarStyle</item>
        <item name="waveViewStyle">@style/WaveViewStyle</item>

        <!-- Dialog -->
        <item name="dialogTitleStyle">@style/Widget.Dialog.Title</item>
        <item name="dialogContentStyle">@style/Widget.Dialog.Content</item>
        <item name="textAppearanceDialogTitle">@style/TextAppearance.Dialog.Title</item>
        <item name="textAppearanceDialogMessage">@style/TextAppearance.Dialog.Message</item>
        <item name="textAppearanceDialogInfo">@style/TextAppearance.Dialog.Info</item>

        <!-- Active display -->
        <item name="activeDisplayNotificationTitle">@style/Widget.ActiveDisplayNotification.Title</item>
        <item name="activeDisplayNotificationMessage">@style/Widget.ActiveDisplayNotification.Message</item>
    </style>

    <!-- All device dependent modification goes here -->
    <style name="ActiveDisplayThemeBase" parent="AppTheme">
    </style>

    <style name="ActiveDisplayTheme" parent="ActiveDisplayThemeBase">
        <item name="android:inAnimation">@null</item>
        <item name="android:outAnimation">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="waveViewStyle">@style/WaveViewStyle</item>
        <item name="circularProgressBarStyle">@style/CircularProgressBarStyle</item>

        <!-- Theme.Holo.NoActionBar.Fullscreen -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActiveDisplayTheme.Wallpaper" parent="ActiveDisplayTheme">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/keyguard_background</item>
        <item name="android:windowShowWallpaper">true</item>

        <!-- Active display
        <item name="activeDisplayNotificationTitle">@style/Widget.ActiveDisplayNotification.Title.WithShadows</item>
        <item name="activeDisplayNotificationMessage">@style/Widget.ActiveDisplayNotification.Message.WithShadows</item> -->
    </style>
</resources>
