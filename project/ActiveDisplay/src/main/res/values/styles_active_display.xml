<resources>
    <style name="Widget.ActiveDisplayNotification.Title" parent="android:Widget.Holo">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.ActiveDisplayNotification.Title.WithShadows" parent="Widget.ActiveDisplayNotification.Title">
        <item name="android:shadowColor">#90000000</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">6.0</item>
    </style>

    <style name="Widget.ActiveDisplayNotification.Message" parent="android:Widget.Holo">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">8</item>
    </style>

    <style name="Widget.ActiveDisplayNotification.Message.WithShadows" parent="Widget.ActiveDisplayNotification.Message">
        <item name="android:shadowColor">#B0000000</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>
</resources>
