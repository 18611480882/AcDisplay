<resources>

    <style name="WaveViewStyle">
        <item name="point_radius">2dp</item>
        <item name="point_number">10</item>
    </style>

    <style name="CircularProgressBarStyle">
        <item name="stroke_width">3dp</item>
        <item name="marker_visible">false</item>
        <item name="thumb_visible">false</item>
        <item name="progress_background_color">#4fff</item>
        <item name="progress_color">@android:color/white</item>
        <item name="progress">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!--  ************************
          ||||||||||||||||||||||||
               TEXT APPEARANCE
          ||||||||||||||||||||||||
          ************************  -->

    <!--  ************************
          ||||||||||||||||||||||||
                   DIALOG
          ||||||||||||||||||||||||
          ************************  -->

    <style name="DialogTextAppearance" />

    <style name="TextAppearance.Dialog.Title" parent="android:TextAppearance.Holo.Large">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Dialog.Message" parent="android:TextAppearance.Holo.Small">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Dialog.Info" parent="android:TextAppearance.Holo.Small">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Widget.Dialog" parent="android:Widget.Holo">
        <item name="android:divider">?android:dividerHorizontal</item>
        <item name="android:showDividers">middle</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- For tablets -->
    <style name="Widget.Dialog.Large" parent="Widget.Dialog">
        <item name="android:divider">?android:dividerVertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Widget.Dialog.Title" parent="android:Widget.Holo">
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAppearance">?textAppearanceDialogTitle</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Dialog.Content" parent="android:Widget.Holo">
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <!--  ************************
          ||||||||||||||||||||||||
                   DIALOG
          ||||||||||||||||||||||||
          ************************  -->
    <style name="Dialog"/>

    <style name="Dialog.Title" parent="Dialog">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Dialog.Title.MultiPanel" parent="Dialog.Title">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="Dialog.Message" parent="Dialog">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Dialog.Message.MultiPanel" parent="Dialog.Message">
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <!--  ************************
          ||||||||||||||||||||||||
                  AD MAIN
          ||||||||||||||||||||||||
          ************************  -->
    <style name="ADMain"/>

    <style name="ADMain.Text" parent="ADMain">
        <item name="android:maxLines">1</item>
    </style>

    <style name="ADMain.Text.Clock" parent="ADMain.Text">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:format12Hour">hh:mm</item>
        <item name="android:format24Hour">HH:mm</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textSize">80sp</item>
    </style>

    <style name="ADMain.Text.Date" parent="ADMain.Text">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:format12Hour">dd MMM yy</item>
        <item name="android:format24Hour">dd MMM yy</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--  ************************
          ||||||||||||||||||||||||
               AD PREVIEW LIST
          ||||||||||||||||||||||||
          ************************  -->
    <style name="ADPreviewList"/>

    <style name="ADPreviewList.Icon" parent="ADPreviewList">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ADPreviewList.Text" parent="ADPreviewList">
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="ADPreviewList.Text.Title" parent="ADPreviewList.Text">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:maxWidth">128dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ADPreviewList.Text.Message" parent="ADPreviewList.Text">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
